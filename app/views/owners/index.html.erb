<h1>Listing owners</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Telephone</th>
    <th>Pets</th>
  </tr>

<% @owners.each do |owner| %>
  <tr>
    <td><%= link_to "#{owner.first_name} #{owner.last_name}", owner %></td>
    <td><%= owner.address %></td>
    <td><%= owner.city %></td>
    <td><%= owner.telephone %></td>
    <td>
    	<% owner.pets.each do |pet| %>
    	  <%= link_to pet.name, pet %>
    	<% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Owner', new_owner_path %>
